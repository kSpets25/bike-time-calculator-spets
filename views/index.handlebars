{{> header}}
<main>
  <h1>This is the home page!</h1>
  <p>Currently, you are {{#unless isLoggedIn}} NOT {{/unless}} logged in.</p>
  <p>You should {{#unless isLoggedIn}}NOT{{/unless}} be able to access <a href="/private">this page</a>.</p>
  <p>Use the header above to {{#if isLoggedIn}} logout{{else}} login or create an account{{/if}}.</p>
  
  <h1>Bike Time Calculator</h1>
  <h4>Enter your information</h4>
  <form id="calc-form">
    <label for ="distance">Distance (mi):</label>
    <input type ="number" id="distance" name="distance"><br><br>

    <label for"speed">Speed (mph):</label>
    <input type ="number" id="speed" name="speed"><br><br>

    <button "submit">Calculate</button><br><br>
  </form>

  <form method="post" action="/calculatedTime">
    <label for="add">Bike Time:</label>
    <input type="number" name="calculatedTime" id="add">
    <button type="submit">Calculate</button>
  </form>

  <ul>
    {{#each practice}}
      <li 
        data-id="{{id}}"
        data-done="{{done}}"
        {{#if done}} class="done" {{/if}}
        >
        {{time}}
      </li>
    {{/each}}
  <ul>
  <p id="result">Logged Bike Time Results:</p>
</main>
